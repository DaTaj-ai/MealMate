<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestAuth" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/PrimaryColor</item>
        <item name="colorPrimaryVariant">@color/PrimaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.App.Starting" parent="Theme.AppCompat.Light.NoActionBar">


        <item name="windowSplashScreenBackground">@color/MyYellow</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/location_icon</item>

        <!-- Animation duration (optional) -->
        <item name="windowSplashScreenAnimationDuration">500</item> <!-- 500ms -->

        <!-- Post-splash screen theme -->
        <item name="postSplashScreenTheme">@style/Theme.TestAuth.NoActionBar</item>
    </style>
    <style name="Theme.TestAuth.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.TestAuth.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TestAuth.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>